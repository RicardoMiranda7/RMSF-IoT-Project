<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jose_trabalho.myapplication.Settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/settings_work_tool"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignTop="@+id/textView6" />

    <TextView
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:text="Buzzer"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:textAlignment="textStart"
        android:layout_above="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:id="@+id/lvSensors"
        android:layout_row="18"
        android:layout_column="0"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion Sensors"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:layout_row="17"
        android:layout_column="0"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:text="Propagation"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:textAlignment="textStart"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <ToggleButton
        android:layout_width="33dp"
        android:layout_height="45dp"
        android:id="@+id/swEnableAlarm"
        android:onClick="toggleEnableAlarm"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:background="@drawable/toggle_selector"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignBottom="@+id/textView11" />

    <ToggleButton
        android:layout_width="33dp"
        android:layout_height="45dp"
        android:id="@+id/swBuzzer"
        android:onClick="toggleBuzzer"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:background="@drawable/toggle_selector"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/swEnableAlarm"
        android:layout_alignStart="@+id/swEnableAlarm"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignTop="@+id/textView8" />

    <ToggleButton
        android:id="@+id/swPropagation"
        android:onClick="togglePropagation"
        android:background="@drawable/toggle_selector"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_width="33dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/swBuzzer"
        android:layout_alignStart="@+id/swBuzzer"
        android:layout_alignTop="@+id/textView10" />

    <TextView
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:text="Enabled"
        android:id="@+id/textView11"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="50dp"
        android:textAlignment="textStart"
        android:layout_above="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

</RelativeLayout>

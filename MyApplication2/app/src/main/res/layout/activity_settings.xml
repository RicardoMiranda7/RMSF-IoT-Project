<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jose_trabalho.myapplication.Settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/settings_work_tool"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignTop="@+id/textView6" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:background="@drawable/apptheme_btn_toggle_holo_light"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/toggleButton2"
        android:layout_alignStart="@+id/toggleButton2"
        android:layout_alignTop="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buzzer"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="50dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:checked="false"
        android:background="@drawable/apptheme_btn_toggle_holo_light"
        android:layout_above="@+id/textView9"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propagate Buzzer"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="50dp"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:id="@+id/lvSensors"
        android:layout_row="18"
        android:layout_column="0"
        android:layout_below="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion Sensors"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#458B00"
        android:textIsSelectable="false"
        android:layout_row="17"
        android:layout_column="0"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/lvSensors"
        android:layout_alignStart="@+id/lvSensors" />

</RelativeLayout>
